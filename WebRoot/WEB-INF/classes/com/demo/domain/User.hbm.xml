<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- 
		class用来描述一个类
		   name 类的全名
		   table 该持久化类对应的表名   可以不写，默认值为类名
		   catalog  数据库的名称
	 -->
	<class name="com.demo.domain.User" table="users" catalog="ssh">
		<!-- 
			用来描述主键
			  name 属性的名称
			  column 属性的名称对应的表的字段   可以不写  默认值就是属性的名称
			  length  属性的名称对应的表的字段的长度  如果不写，默认是最大的长度
		 -->
		<id name="id"  type="java.lang.Integer">
			<column name="id"></column>
			<generator class="increment"></generator>
		</id>
		
		<property name="name" length="20" type="java.lang.String">
			<column name="name" length="100" not-null="true" >
				<comment>用户名</comment>
			</column>
		</property> 
		
		<property name="password" type="java.lang.String" >
			<column name="password" length="100" not-null="true" >
			<comment>密码</comment>
			</column>
		</property>
		
		<property name="type" type="java.lang.String" >
			<column name="type" length="500" not-null="false" >
			<comment>类型</comment>
			</column>
		</property>
		
		<property name="image" type="java.lang.byte[]" >
		<column name="image"  not-null="false" >
			<comment>照片</comment>
			</column>
		</property>
	
		
		<property name="email" type="java.lang.String" >
			<column name="email"  not-null="false" >
			<comment>邮箱</comment>
			</column>
		</property>
		
		<property name="gender" type="java.lang.String" >
			<column name="gender"  not-null="false" >
			<comment>性别</comment>
			</column>
		</property>
		 
		 	<property name="birthday" type="java.util.Date" >
			<column name="birthday"  not-null="false" >
			<comment>生日</comment>
			</column>
		</property>
		
		<property name="address" type="java.lang.String" >
			<column name="address"  not-null="false" >
			<comment>地址</comment>
			</column>
		</property>
		
		<property name="job" type="java.lang.String" >
			<column name="job"  not-null="false" >
			<comment>工作</comment>
			</column>
		</property>
		
		<property name="synopsis" type="java.lang.String" >
			<column name="synopsis"  not-null="false" >
			<comment>简介</comment>
			</column>
		</property>
		
		
	</class>
</hibernate-mapping>